#include <iostream>  
#include <bits/stdc++.h>  
  
using namespace std;  
  
int main()  
{  
    unsigned int num,temp,start;  
    int j;  
    vector <int> b;  
    cin >> num;  
    cout << "Before bits are reversed:" << endl;  
    cout << num << " = ";  
    for(int i=0;i<32;++i){  
        temp=num&1;  
        b.push_back(temp);  
        num=num>>1;  
    }  
    for(int i=b.size()-1;i>=0;--i){  
        cout << b.at(i);  
        if(i%8==0){  
            cout << " ";  
        }  
    }  
    cout << endl;  
    cout << endl;  
    cout << "After bits are reversed:" << endl;  
    start=0;  
    j=0;  
    for(int i=b.size()-1;i>=0;--i){  
        start=start+(b[i]<<j);  
        j++;  
    }  
    cout << start << " = ";  
    for(int i=0;i<b.size();++i){  
        cout << b.at(i);  
        if(i%8==7){  
            cout << " ";  
        }  
    }  
    cout << endl;  
    return 0;  
} 
